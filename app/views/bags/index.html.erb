<p id="notice"><%= notice %></p>

<h1>Bags</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Quantity</th>
      <th>Product</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bags.each do |bag| %>
      <tr>
        <td><%= bag.user %></td>
        <td><%= bag.quantity %></td>
        <td><%= bag.product %></td>
        <td><%= link_to 'Show', bag %></td>
        <td><%= link_to 'Edit', edit_bag_path(bag) %></td>
        <td><%= link_to 'Destroy', bag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bag', new_bag_path %>
